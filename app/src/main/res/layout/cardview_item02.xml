<?xml version="1.0" encoding="utf-8"?>
<!-- 使用包含套件的全名為標籤名稱 -->
<!-- card_view:cardBackgroundColor：設定背景樣式 -->
<!-- card_view:cardCornerRadius：設定圓角樣式 -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:onClick="myItemClick"
    android:id="@+id/card_view_record"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="2sp"
    android:layout_marginTop="2sp"
    card_view:cardBackgroundColor="#82e4e2e3"
    card_view:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2sp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/card_gameName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/card_gameDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>


