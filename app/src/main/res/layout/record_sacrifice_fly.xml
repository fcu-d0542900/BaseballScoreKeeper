<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/radioGroup_sacrificeFly_type"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="球種"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton_sacrificeFly_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="高飛球" />

        <RadioButton
            android:id="@+id/radioButton_sacrificeFly_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="平飛球" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup_sacrificeFly_direction"
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="方向"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radioButton_sacrificeFly_direction_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="左外野" />

        <RadioButton
            android:id="@+id/radioButton_sacrificeFly_direction_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="中外野" />

        <RadioButton
            android:id="@+id/radioButton_sacrificeFly_direction_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="右外野" />
    </RadioGroup>
</LinearLayout>
