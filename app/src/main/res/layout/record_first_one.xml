<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/radioGroup_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="球種"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButton_type_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="高飛球" />

        <RadioButton
            android:id="@+id/radioButton_type_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="平飛球" />

        <RadioButton
            android:id="@+id/radioButton_type_ground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="滾地球" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="方向"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinner_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:dropDownWidth="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="其他"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBox_elseAc_FC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="野手選擇 FC" />

        <CheckBox
            android:id="@+id/checkBox_elseAc_u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自踩壘包 u" />

        <CheckBox
            android:id="@+id/checkBox_elseAc_E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失誤 E" />

        <CheckBox
            android:id="@+id/checkBox_elseAc_T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="觸殺 T" />
    </LinearLayout>

</LinearLayout>
